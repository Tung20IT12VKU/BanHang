<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_chitietSp"
    android:layout_width="200dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/bglogin"/>

    <TextView
        android:id="@+id/tv_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Áo nam"
        app:layout_constraintTop_toBottomOf="@id/image_sanpham"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/gia_sanpham"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="900000"
        android:textSize="25dp"
        android:textColor="#E41259"
        app:layout_constraintTop_toBottomOf="@id/tv_sanpham"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>